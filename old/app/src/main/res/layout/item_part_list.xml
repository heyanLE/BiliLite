<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_marginTop="12dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:src="@mipmap/test"
            android:id="@+id/item_fra_list_iv"
            android:layout_width="128dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"/>


    <TextView
        android:id="@+id/item_fra_list_tv"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="13sp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3a3a3a"
        android:layout_toEndOf="@id/item_fra_list_iv"
        android:layout_toRightOf="@id/item_fra_list_iv"
        android:text="【SP】关于我女友是个一本正经的碧池这件事：第10话 我忍不住了！"/>


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_fra_list_iv"
        android:layout_toRightOf="@id/item_fra_list_iv"
        android:orientation="horizontal"
        android:layout_above="@id/item_fra_list_down_linear">

        <ImageView
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/up"/>

        <TextView
            android:textColor="#b2b2b2"
            android:id="@+id/item_fra_list_tv_up"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哔哩哔哩番剧"
            android:textSize="10sp"/>

    </LinearLayout>

    <TextView
        android:textColor="#b2b2b2"
        android:id="@+id/item_fra_list_down_tv_all"
        android:layout_alignBottom="@id/item_fra_list_iv"
        android:layout_toEndOf="@id/item_fra_list_iv"
        android:layout_toRightOf="@id/item_fra_list_iv"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2小时前投递"
        android:textSize="10sp"/>



    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/item_fra_list_down_linear"
        android:layout_alignBottom="@id/item_fra_list_iv"
        android:layout_toEndOf="@id/item_fra_list_iv"
        android:layout_toRightOf="@id/item_fra_list_iv"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_fra_list_down_iv_fir"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/play"/>

        <TextView
            android:textColor="#b2b2b2"
            android:id="@+id/item_fra_list_down_tv_fir"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.5万"
            android:textSize="10sp"/>

        <ImageView
            android:id="@+id/item_fra_list_down_iv_sec"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/danmaku"/>

        <TextView
            android:textColor="#b2b2b2"
            android:id="@+id/item_fra_list_down_tv_sec"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.5万"
            android:textSize="8sp"/>


    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>